/* pages/diagnosis/result/result.wxss */
.container {
  padding: 30rpx;
  background-color: var(--bg-gray);
}

/* 图片展示区域 */
.image-section {
  width: 100%;
  height: 400rpx;
  position: relative;
  overflow: hidden;
  margin-bottom: 30rpx;
  padding: 0;
}

.diagnosis-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* 在这里可以添加标记区域的样式 */
}

/* 诊断结果区域 */
.result-section {
  margin-bottom: 30rpx;
  padding: 30rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.result-title {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--text-dark);
}

.pet-type {
  font-size: 28rpx;
  color: var(--primary-blue);
  background-color: rgba(165, 215, 232, 0.2);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.disease-info {
  margin-bottom: 30rpx;
}

.disease-name {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-dark);
  margin-bottom: 20rpx;
}

.confidence {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.confidence-label {
  font-size: 28rpx;
  color: var(--text-gray);
  margin-right: 20rpx;
  width: 120rpx;
}

.confidence-bar-bg {
  flex: 1;
  height: 16rpx;
  background-color: #EEEEEE;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.confidence-bar {
  height: 100%;
  background-color: var(--primary-blue);
  border-radius: 8rpx;
}

.confidence-value {
  font-size: 28rpx;
  color: var(--primary-blue);
  font-weight: bold;
  width: 80rpx;
  text-align: right;
}

.severity {
  display: flex;
  align-items: center;
}

.severity-label {
  font-size: 28rpx;
  color: var(--text-gray);
  margin-right: 20rpx;
  width: 120rpx;
}

.severity-indicators {
  display: flex;
  gap: 10rpx;
}

.severity-indicator {
  width: 30rpx;
  height: 16rpx;
  background-color: #EEEEEE;
  border-radius: 8rpx;
}

.severity-indicator.active {
  background-color: #FF6B6B;
}

.disease-description {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 2rpx solid #EEEEEE;
}

.description-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-dark);
  margin-bottom: 16rpx;
  display: block;
}

.description-content {
  font-size: 28rpx;
  color: var(--text-gray);
  line-height: 1.6;
}

/* 诊疗建议区域 */
.advice-section {
  margin-bottom: 30rpx;
  padding: 30rpx;
}

.advice-title {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--text-dark);
  margin-bottom: 20rpx;
  display: block;
}

.advice-tabs {
  display: flex;
  border-bottom: 2rpx solid #EEEEEE;
  margin-bottom: 20rpx;
}

.advice-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: var(--text-gray);
  position: relative;
}

.advice-tab.active {
  color: var(--primary-blue);
  font-weight: bold;
}

.advice-tab.active::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: var(--primary-blue);
  border-radius: 2rpx;
}

.advice-content {
  padding: 10rpx 0;
}

.advice-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.advice-item-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: var(--primary-blue);
  margin-top: 14rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.advice-item-text {
  font-size: 28rpx;
  color: var(--text-gray);
  line-height: 1.6;
  flex: 1;
}

/* 操作按钮区域 */
.actions-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.actions-section .btn {
  flex: 1;
  height: 80rpx;
}

.btn-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
} 
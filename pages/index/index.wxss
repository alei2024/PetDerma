/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

/* 欢迎区域样式 */
.welcome-section {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 0;
  padding: 30rpx;
  background-color: var(--primary-blue);
  border-radius: 20rpx;
  color: white;
}

.welcome-text {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.welcome-image {
  width: 160rpx;
  height: 160rpx;
}

.welcome-image image {
  width: 100%;
  height: 100%;
}

/* 宠物选择区样式 */
.pet-select-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 30rpx 0 20rpx;
  color: var(--text-dark);
  text-align: center;
}

/* 宠物选择按钮样式在app.wxss中已定义 */

.pet-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 15rpx;
}

/* 功能区块样式 */
.features-grid {
  width: 100%;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin: 40rpx 0;
}

.feature-item {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.feature-item:active {
  transform: scale(0.98);
}

.feature-icon-container {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  position: relative;
}

.primary {
  background-color: rgba(165, 215, 232, 0.2);
}

.secondary {
  background-color: rgba(255, 192, 203, 0.2);
}

.tertiary {
  background-color: rgba(255, 250, 205, 0.3);
}

.quaternary {
  background-color: rgba(189, 252, 201, 0.2);
}

.feature-icon {
  width: 60rpx;
  height: 60rpx;
}

.feature-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: var(--text-dark);
}

.feature-desc {
  font-size: 24rpx;
  color: var(--text-light);
}

/* 通知红点 */
.notification-dot {
  position: absolute;
  top: 0;
  right: 0;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #FF6B6B;
}

/* 新标签 */
.new-tag {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  background-color: #FF6B6B;
  color: white;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 12rpx;
}

/* 温馨提示样式 */
.tips-section {
  width: 100%;
  background-color: white;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tips-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.tips-icon image {
  width: 100%;
  height: 100%;
}

.tips-content {
  flex: 1;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-dark);
  margin-bottom: 5rpx;
}

.tips-text {
  font-size: 24rpx;
  color: var(--text-gray);
  line-height: 1.5;
}
